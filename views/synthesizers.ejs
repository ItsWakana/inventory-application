<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="table__wrapper">
      <table cellspacing="0">
        <tr id="table__heading">
          <th>Synthesizer</th>
          <th>Brand</th>
          <th>Price</th>
          <th>Year</th>
          <th>Stock</th>
          <th>Remove</th>
        </tr>
        <% synthesizers.map((synth) => { %>
            <tr>
                <td>
                  <a href="/synthesizers/<%= synth._id %>/update"><%= synth.name%></a>
                </td>
                <td><%= synth.brand.name%></td>
                <td>Â£<%= synth.price%></td>
                <td><%= synth.releaseYear%></td>
                <td><%= synth.stock%></td>
                <td>
                  <form action="/synthesizers/<%= synth._id %>/delete" method="post">
                    <button class="delete-btn" type="submit">Remove Item</button>
                  </form>
                </td>
              </tr>
              <% }) %>
      </table>
      <button><a href="/synthesizers/create">Add Synthesizer</a></button>
    </div>
  </body>
</html>
